<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".principal"
    tools:showIn="@layout/principal">


    <ImageButton
        android:id="@+id/img_agenda"
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="48dp"
        android:background="@android:color/background_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cliente" />

    <ImageButton
        android:id="@+id/img_volquete"
        style="@android:style/Widget.DeviceDefault.Light.ImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="144dp"
        android:background="@android:color/background_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_agenda"
        app:srcCompat="@drawable/stock" />

    <ImageButton
        android:id="@+id/img_reserva"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="48dp"
        android:background="@android:color/background_light"
        app:layout_constraintStart_toEndOf="@+id/img_agenda"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/reserva" />

    <ImageButton
        android:id="@+id/img_mapa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginLeft="68dp"
        android:layout_marginTop="120dp"
        android:background="@android:color/background_light"
        app:layout_constraintStart_toEndOf="@+id/img_volquete"
        app:layout_constraintTop_toBottomOf="@+id/img_reserva"
        app:srcCompat="@drawable/mapa" />

    <ImageButton
        android:id="@+id/img_reportes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="188dp"
        android:background="@android:color/background_light"
        app:layout_constraintStart_toEndOf="@+id/img_agenda"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/reportes" />

</androidx.constraintlayout.widget.ConstraintLayout>