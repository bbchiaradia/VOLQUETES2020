<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".swipview.Cliente.Reserva.BorrarModificarReservaFragment">

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:src="@drawable/cinta_small" />

    <EditText
        android:id="@+id/codigo_cliente_borrar_reserva"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefgh ijklmnopqrstuvwxyz1234567890"
        android:ems="10"
        android:hint="@string/codigo_CLIENTE"
        android:inputType="textPersonName"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:src="@drawable/cinta_small" />

    <Button
        android:id="@+id/btn_buscar_reserva_borrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="185dp"
        android:layout_marginTop="11dp"
        android:onClick="BuscarBorrarReservas"
        android:text="@string/BUSCAR" />

    <ListView
        android:id="@+id/ListaBorrarReservas"
        android:layout_width="match_parent"
        android:layout_height="401dp"
        android:cacheColorHint="@android:color/holo_red_dark"
        android:clickable="true"
        android:divider="@android:color/holo_red_dark"
        android:dividerHeight="4dp"
        android:paddingTop="75dp">

    </ListView>

</FrameLayout>